<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
    <tr>
      <td><%= doctor.fname %></td>
      <td><%= doctor.lname %></td>
      <td><%= doctor.email %></td>
      <td><%= doctor.contact %></td>
      <%if can? :read, doctor%>
      <td><%= link_to 'Show', doctor %></td>
      <% end %>
      <%if can? :update, doctor%>
      <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
      <% end %>
      <% if can? :destroy, doctor%>
      <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Doctor', new_doctor_path %>
